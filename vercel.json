{
  "version": 2,
  "outputDirectory": ".",
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
  "rewrites": [
    {
      "source": "/src/(.*)",
      "destination": "/api/src/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.php"
    }
  ]
}

